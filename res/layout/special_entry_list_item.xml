<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >
    
    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_promotion_item_01"
        android:contentDescription="@null" />
     
    <TextView
        android:id="@+id/left_time"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="6dp"
        android:gravity="center"
        android:background="@drawable/promotion_item_countdown_bg"
        android:drawableLeft="@drawable/ic_promotion_countdown_timer"
        android:text="@string/sample_special_entry_item_countdown_lefttime_1"
        android:textColor="#FFE5E1E1"
        android:textSize="12sp" />
    
    <RelativeLayout
        android:layout_width="match_parent" 
        android:layout_height="33dp"
        android:layout_below="@id/picture"
        android:background="@color/white" >
        
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:text="@string/sample_special_entry_item_title_1" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >
            
            <TextView
                android:id="@+id/discount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/pink"
                android:text="@string/sample_special_entry_item_discount_1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:text="@string/zhe_qi" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>