<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:gravity="center_vertical"
    android:background="@color/white" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/sub_title_dark_gray"
        android:text="@string/product_satisfaction" />
    
    <TextView
        android:id="@+id/score_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/pink"
        android:text="@string/sample_product_reviews_satisfaction_score_1" />
    
    <com.ec.mamiya.view.BigStarScoreView
        android:id="@+id/big_score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />
    
</LinearLayout>